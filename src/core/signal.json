binary:

len::=VLQ
assoc::=[len][head][len][body]
head::=[hrec][head]

char=[.*]
hchar=[A-Za-z._0-9]

char_data::=NONE | [hchar][char_data]
hchar_data::=NONE | [hchar][hchar_data]

hrec::=[len][hchar_data]

irec::=00[VLQ]
srec::=01[len][0|1][char_data] // 0 - строковые данные, 1 - бинарные
orec::=10[assoc]
arec::=11[len][rec]

rec::=srec|irec|orec|arec

body::=NONE | [rec][body]

